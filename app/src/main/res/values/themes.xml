<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Starbucks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/starbucks_green</item>
        <item name="colorPrimaryVariant">@color/starbucks_light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Starbucks.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>