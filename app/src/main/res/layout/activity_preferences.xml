<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preferences_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/starbucks_green"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/favorite_menu"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFavoriteMenu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/edittext_rounded"
        android:padding="16dp"
        android:hint="Caramel Macchiato, Frappuccino, dll"
        android:inputType="text"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/referral_code"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etReferralCode"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/edittext_rounded"
        android:padding="16dp"
        android:hint="Masukkan kode referral (opsional)"
        android:inputType="text"
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/button_rounded"
        android:enabled="false" />

</LinearLayout>