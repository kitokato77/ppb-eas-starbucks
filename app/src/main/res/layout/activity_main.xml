<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00704A"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Starbucks Logo Placeholder -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/starbucks_logo"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="60dp"
            android:contentDescription="Starbucks Logo"
            android:scaleType="centerInside" />

        <!-- Welcome Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome\nto Starbucks"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="start"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kami di sini untuk membantu Anda, temukan apa yang Anda cari sekarang."
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="start"
            android:layout_marginBottom="48dp"
            android:alpha="0.9"
            android:lineSpacingExtra="2dp" />

        <!-- Spacer to push button to bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Get Started Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGetStarted"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Get Started"
            android:textColor="#00704A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_rounded_dark"
            android:layout_marginBottom="32dp"
            android:elevation="2dp" />

    </LinearLayout>
</ScrollView>